<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkGrey1"
    tools:context=".GenerateQRActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logofront"
        android:id="@+id/imgToQR"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type something to generate QR Code: "
        android:textColor="@color/colorLightGrey2"
        android:layout_above="@id/etTextToQR"
        android:id="@+id/tvTellThemToType"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/colorLightGrey2"
        android:hint="Type something"
        android:layout_above="@id/bGenerateQR"
        android:id="@+id/etTextToQR"
        />
    <Button
        android:id="@+id/bGenerateQR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fontFamily="sans-serif-condensed"
        android:layout_centerInParent="true"
        android:textColor="@color/colorLightGrey2"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/button_style"
        android:layout_centerHorizontal="true"
        android:text="Generate QR" />



</RelativeLayout>